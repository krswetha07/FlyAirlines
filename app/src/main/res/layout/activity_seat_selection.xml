<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Seat"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvFlightDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Details"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvFlightDetails">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat1A"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="1A"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat1B"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="1B"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat1C"
                    style="@style/SeatCard"
                    android:layout_marginEnd="32dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="1C"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat1D"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="1D"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat1E"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="1E"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat1F"
                    style="@style/SeatCard">
                    <TextView
                        style="@style/SeatText"
                        android:text="1F"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat2A"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="2A"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat2B"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="2B"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat2C"
                    style="@style/SeatCard"
                    android:layout_marginEnd="32dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="2C"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat2D"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="2D"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat2E"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="2E"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat2F"
                    style="@style/SeatCard">
                    <TextView
                        style="@style/SeatText"
                        android:text="2F"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat3A"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="3A"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat3B"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="3B"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat3C"
                    style="@style/SeatCard"
                    android:layout_marginEnd="32dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="3C"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat3D"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="3D"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat3E"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="3E"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat3F"
                    style="@style/SeatCard">
                    <TextView
                        style="@style/SeatText"
                        android:text="3F"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat4A"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="4A"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat4B"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="4B"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat4C"
                    style="@style/SeatCard"
                    android:layout_marginEnd="32dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="4C"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat4D"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="4D"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat4E"
                    style="@style/SeatCard"
                    android:layout_marginEnd="8dp">
                    <TextView
                        style="@style/SeatText"
                        android:text="4E"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/seat4F"
                    style="@style/SeatCard">
                    <TextView
                        style="@style/SeatText"
                        android:text="4F"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Seat"
        android:layout_marginTop="24dp"
        style="@style/Widget.MaterialComponents.Button"
        app:backgroundTint="#0D7377"
        app:layout_constraintTop_toBottomOf="@id/scrollView"/>

</androidx.constraintlayout.widget.ConstraintLayout> 